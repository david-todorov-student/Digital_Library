@model DigitalLibrary.Models.UserRole
@{
    ViewBag.Title = "AddUserToRole";
}
<style type="text/css">
    body {
        background-color: #F7F1F0;
    }
</style>
<body>
    <h2>Add User To Role</h2>

    @using (Html.BeginForm("AddUserToRole", "Account"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(m => m.selectedRole, new SelectList(Model.roles), new { @class = "form-control" })
        </div>
        <button type="submit">Add</button>
    }
</body>
